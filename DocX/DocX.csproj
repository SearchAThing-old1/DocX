<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net46;net461;net462</TargetFrameworks>
    <Product>docx reader/writer</Product>
    <Company />
    <Authors>Lorenzo Delana</Authors>
    <Description>DocX is a .NET library that allows developers to manipulate Word 2007 files, in an easy and intuitive manor.</Description>
    <Copyright>Cathal Coffey</Copyright>
    <PackageLicenseUrl>http://docx.codeplex.com/license</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/devel0/DocX</PackageProjectUrl>
    <RepositoryUrl />
    <PackageTags>c# docx</PackageTags>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)'=='Release'">
    <DocumentationFile>bin\Release\$(TargetFramework)\DocX.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="DocumentFormat.OpenXml" Version="2.7.2" />
  </ItemGroup>

</Project>
